<Window x:Class="OhjelmistokehitysProjekti.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OhjelmistokehitysProjekti"
        mc:Ignorable="d"
        Title="Main menu" Height="1080" Width="1920">
    <Grid>
        <ListView>
            <Button Content="blackjack" Height="80" Width="300" Click="StartBlackjack"></Button>
            <Button Content="slots" Height="80" Width="300" Click="StartSlots"></Button>
            <Button Content="Poker" Height="80" Width="300" Click="StartPoker"></Button>
            <Button Content="Exit Application Command" Height="80" Width="300" Command="{Binding CloseWindowCommand}"></Button>
        </ListView>

    </Grid>
</Window>
